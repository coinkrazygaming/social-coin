# CoinKrazy Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/coinkrazy"
NEON_DATABASE_URL="postgresql://username:password@your-neon-host/coinkrazy"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Sports API Configuration
SPORTS_API_KEY="your-sports-api-key"
SPORTS_API_BASE_URL="https://api.sportsdata.io/v3"

# Payment Processing
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# File Storage
AWS_REGION="us-east-1"
AWS_S3_BUCKET="coinkrazy-assets"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# Application Configuration
NODE_ENV="development"
PORT="3000"
FRONTEND_URL="http://localhost:5173"
BACKEND_URL="http://localhost:3000"

# Security
CORS_ORIGIN="http://localhost:5173"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX="100"

# Monitoring and Analytics
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Feature Flags
ENABLE_REAL_MONEY_MODE="false"
ENABLE_CRYPTO_PAYMENTS="false"
ENABLE_KYC_VERIFICATION="true"
ENABLE_SPORTS_BETTING="true"

# AI Configuration
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Webhook URLs
NOTIFICATION_WEBHOOK_URL="https://your-app.com/webhooks/notifications"
PAYMENT_WEBHOOK_URL="https://your-app.com/webhooks/payments"
